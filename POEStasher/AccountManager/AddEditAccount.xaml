<Window x:Class="POEStasher.AccountManager.AddEditAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddEditAccount" Height="146" Width="213" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        
        <TextBox Margin="57,15,14,0" Name="tbAcc" Height="23" VerticalAlignment="Top" TextChanged="tbAcc_TextChanged" KeyDown="tb_KeyDown" />
        <Label Content="Email:" Height="28" HorizontalAlignment="Left" Margin="12,15,0,0" Name="label1" VerticalAlignment="Top" />
        <PasswordBox Margin="57,44,14,0" Name="tbPass" PasswordChanged="tbPass_PasswordChanged" KeyDown="tb_KeyDown" Height="23" VerticalAlignment="Top" />
        <Label Content="Pass:" HorizontalAlignment="Left" Margin="17,43,0,0" Name="label2" Height="28" VerticalAlignment="Top" />
        <Button Content="Save" Height="23" IsEnabled="false" HorizontalAlignment="Left" Margin="12,76,0,0" Name="bOk" VerticalAlignment="Top" Width="75" Click="bOk_Click" />
        <Button Content="Cancel" Height="23" IsCancel="True" HorizontalAlignment="Left" Margin="102,76,0,0" Name="bCancel" VerticalAlignment="Top" Width="75" Click="bCancel_Click" />
    </Grid>
</Window>
